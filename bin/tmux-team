#!/usr/bin/env node

// Thin wrapper that uses tsx to run the TypeScript CLI
// tsx is a runtime dependency for v2
import { spawn } from 'child_process';
import { fileURLToPath } from 'url';
import { dirname, join } from 'path';
import { existsSync } from 'fs';

const __dirname = dirname(fileURLToPath(import.meta.url));
const cliPath = join(__dirname, '..', 'src', 'cli.ts');

// Find tsx in our own node_modules (not user's cwd)
const localTsx = join(__dirname, '..', 'node_modules', '.bin', 'tsx');
const tsxBin = existsSync(localTsx) ? localTsx : 'tsx';

const child = spawn(tsxBin, [cliPath, ...process.argv.slice(2)], {
  stdio: 'inherit',
  cwd: process.cwd(),
});

child.on('close', (code) => {
  process.exit(code ?? 1);
});

child.on('error', (err) => {
  if (err.code === 'ENOENT') {
    console.error('Error: tsx not found. Please run: npm install');
    process.exit(1);
  }
  throw err;
});
